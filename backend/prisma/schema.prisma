generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model OwnershipEntity {
  id                String   @id @default(uuid())
  userId            String   @map("user_id")
  type              String   // 'sci' | 'nom_propre'
  name              String
  email             String   @default("")
  siret             String?
  addressStreet     String   @map("address_street")
  addressPostalCode String   @map("address_postal_code")
  addressCity       String   @map("address_city")
  addressCountry    String   @map("address_country") @default("France")
  addressComplement String?  @map("address_complement")
  legalInformation       String?  @map("legal_information")
  latePaymentDelayDays   Int      @default(5) @map("late_payment_delay_days")
  createdAt              DateTime @default(now()) @map("created_at")
  updatedAt              DateTime @updatedAt @map("updated_at")

  bankAccounts     BankAccount[]
  properties       Property[]
  tenants          Tenant[]
  leases           Lease[]
  rentCalls        RentCall[]
  bankStatements   BankStatement[]
  chargeCategories ChargeCategory[]

  @@map("ownership_entities")
  @@index([userId])
}

model Property {
  id                String   @id @default(uuid())
  entityId          String   @map("entity_id")
  userId            String   @map("user_id")
  name              String
  type              String?
  addressStreet     String   @map("address_street")
  addressPostalCode String   @map("address_postal_code")
  addressCity       String   @map("address_city")
  addressCountry    String   @map("address_country") @default("France")
  addressComplement String?  @map("address_complement")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  entity OwnershipEntity @relation(fields: [entityId], references: [id])
  units  Unit[]

  @@map("properties")
  @@index([entityId])
  @@index([userId])
}

model Unit {
  id              String   @id @default(uuid())
  propertyId      String   @map("property_id")
  userId          String   @map("user_id")
  identifier      String
  type            String
  floor           Int?
  surfaceArea     Float    @map("surface_area")
  billableOptions Json     @default("[]") @map("billable_options")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  property  Property @relation(fields: [propertyId], references: [id])
  leases    Lease[]
  rentCalls RentCall[]

  @@map("units")
  @@unique([propertyId, identifier])
  @@index([propertyId])
  @@index([userId])
}

model BankAccount {
  id        String   @id @default(uuid())
  entityId  String   @map("entity_id")
  type      String   // 'bank_account' | 'cash_register'
  label     String
  iban      String?
  bic       String?
  bankName  String?  @map("bank_name")
  isDefault Boolean  @default(false) @map("is_default")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  entity         OwnershipEntity @relation(fields: [entityId], references: [id])
  bankStatements BankStatement[]

  @@map("bank_accounts")
  @@index([entityId])
}

model Tenant {
  id                String   @id @default(uuid())
  entityId          String   @map("entity_id")
  userId            String   @map("user_id")
  type              String   // 'individual' | 'company'
  firstName         String   @map("first_name")
  lastName          String   @map("last_name")
  companyName       String?  @map("company_name")
  siret             String?
  email             String
  phoneNumber       String?  @map("phone_number")
  addressStreet     String?  @map("address_street")
  addressPostalCode String?  @map("address_postal_code")
  addressCity       String?  @map("address_city")
  addressComplement String?   @map("address_complement")
  insuranceProvider String?   @map("insurance_provider")
  policyNumber      String?   @map("policy_number")
  renewalDate       DateTime? @map("renewal_date")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  entity    OwnershipEntity @relation(fields: [entityId], references: [id])
  leases    Lease[]
  rentCalls RentCall[]

  @@map("tenants")
  @@index([entityId])
  @@index([userId])
}

model Lease {
  id                   String   @id @default(uuid())
  entityId             String   @map("entity_id")
  userId               String   @map("user_id")
  tenantId             String   @map("tenant_id")
  unitId               String   @map("unit_id")
  startDate            DateTime @map("start_date")
  rentAmountCents      Int      @map("rent_amount_cents")
  securityDepositCents Int      @map("security_deposit_cents")
  monthlyDueDate       Int      @map("monthly_due_date")
  revisionIndexType    String   @map("revision_index_type")
  revisionDay          Int?     @map("revision_day")
  revisionMonth        Int?     @map("revision_month")
  referenceQuarter     String?  @map("reference_quarter")
  referenceYear        Int?     @map("reference_year")
  baseIndexValue       Float?   @map("base_index_value")
  endDate              DateTime? @map("end_date")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  entity       OwnershipEntity  @relation(fields: [entityId], references: [id])
  tenant       Tenant           @relation(fields: [tenantId], references: [id])
  unit         Unit             @relation(fields: [unitId], references: [id])
  rentCalls    RentCall[]
  billingLineRows LeaseBillingLine[]

  @@map("leases")
  @@index([entityId])
  @@index([tenantId])
  @@index([unitId])
  @@index([userId])
}

model RentCall {
  id               String   @id @default(uuid())
  entityId         String   @map("entity_id")
  userId           String   @map("user_id")
  leaseId          String   @map("lease_id")
  tenantId         String   @map("tenant_id")
  unitId           String   @map("unit_id")
  month            String
  rentAmountCents  Int      @map("rent_amount_cents")
  billingLines     Json     @default("[]") @map("billing_lines")
  totalAmountCents Int      @map("total_amount_cents")
  isProRata        Boolean   @default(false) @map("is_pro_rata")
  occupiedDays     Int?      @map("occupied_days")
  totalDaysInMonth Int?      @map("total_days_in_month")
  sentAt           DateTime? @map("sent_at")
  recipientEmail   String?   @map("recipient_email")
  paidAt           DateTime? @map("paid_at")
  paidAmountCents  Int?      @map("paid_amount_cents")
  transactionId    String?   @map("transaction_id")
  bankStatementId  String?   @map("bank_statement_id")
  payerName         String?   @map("payer_name")
  paymentDate       DateTime? @map("payment_date")
  paymentMethod     String?   @map("payment_method")
  paymentReference  String?   @map("payment_reference")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  paymentStatus        String?   @map("payment_status")
  remainingBalanceCents Int?     @map("remaining_balance_cents")
  overpaymentCents     Int?      @map("overpayment_cents")

  entity   OwnershipEntity @relation(fields: [entityId], references: [id])
  lease    Lease           @relation(fields: [leaseId], references: [id])
  tenant   Tenant          @relation(fields: [tenantId], references: [id])
  unit     Unit            @relation(fields: [unitId], references: [id])
  payments Payment[]

  @@unique([leaseId, month])
  @@map("rent_calls")
  @@index([entityId])
  @@index([entityId, month])
  @@index([userId])
}

model Payment {
  id               String   @id @default(uuid())
  rentCallId       String   @map("rent_call_id")
  entityId         String   @map("entity_id")
  transactionId    String   @map("transaction_id")
  bankStatementId  String?  @map("bank_statement_id")
  amountCents      Int      @map("amount_cents")
  payerName        String   @map("payer_name")
  paymentDate      DateTime @map("payment_date")
  paymentMethod    String   @map("payment_method")
  paymentReference String?  @map("payment_reference")
  recordedAt       DateTime @map("recorded_at")
  createdAt        DateTime @default(now()) @map("created_at")

  rentCall RentCall @relation(fields: [rentCallId], references: [id])

  @@map("payments")
  @@unique([transactionId])
  @@index([rentCallId])
  @@index([entityId])
}

model AccountEntry {
  id             String   @id @default(uuid())
  entityId       String   @map("entity_id")
  tenantId       String   @map("tenant_id")
  type           String   // 'debit' | 'credit'
  category       String   // 'rent_call' | 'payment' | 'overpayment_credit' | 'adjustment'
  description    String
  amountCents    Int      @map("amount_cents")
  balanceCents   Int      @map("balance_cents")
  referenceId    String   @map("reference_id")
  referenceMonth String   @map("reference_month")
  entryDate      DateTime @map("entry_date")
  createdAt      DateTime @default(now()) @map("created_at")

  @@map("account_entries")
  @@unique([referenceId, category])
  @@index([entityId, tenantId])
  @@index([tenantId])
}

model Escalation {
  id                String    @id @default(uuid())
  rentCallId        String    @unique @map("rent_call_id")
  entityId          String    @map("entity_id")
  userId            String    @map("user_id")
  tenantId          String    @map("tenant_id")
  tier1SentAt       DateTime? @map("tier1_sent_at")
  tier1RecipientEmail String? @map("tier1_recipient_email")
  tier2SentAt       DateTime? @map("tier2_sent_at")
  tier3SentAt       DateTime? @map("tier3_sent_at")
  createdAt         DateTime  @default(now()) @map("created_at")

  @@map("escalations")
  @@index([entityId])
  @@index([userId])
}

model BankStatement {
  id               String   @id @default(uuid())
  entityId         String   @map("entity_id")
  userId           String   @map("user_id")
  bankAccountId    String   @map("bank_account_id")
  fileName         String   @map("file_name")
  transactionCount Int      @map("transaction_count")
  importedAt       DateTime @map("imported_at")
  createdAt        DateTime @default(now()) @map("created_at")

  entity       OwnershipEntity   @relation(fields: [entityId], references: [id])
  bankAccount  BankAccount       @relation(fields: [bankAccountId], references: [id])
  transactions BankTransaction[]

  @@map("bank_statements")
  @@index([entityId])
  @@index([userId])
}

model InseeIndex {
  id        String   @id
  type      String   // IRL, ILC, ICC
  quarter   String   // Q1, Q2, Q3, Q4
  year      Int
  value     Float    // Stored as decimal (e.g., 142.06)
  entityId  String   @map("entity_id")
  userId    String   @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  @@unique([type, quarter, year, entityId])
  @@map("insee_indices")
  @@index([entityId])
  @@index([userId])
}

model Revision {
  id                 String    @id
  leaseId            String    @map("lease_id")
  entityId           String    @map("entity_id")
  userId             String    @map("user_id")
  tenantId           String    @map("tenant_id")
  unitId             String    @map("unit_id")
  tenantName         String    @map("tenant_name")
  unitLabel          String    @map("unit_label")
  currentRentCents   Int       @map("current_rent_cents")
  newRentCents       Int       @map("new_rent_cents")
  differenceCents    Int       @map("difference_cents")
  baseIndexValue     Float     @map("base_index_value")
  baseIndexQuarter   String    @map("base_index_quarter")
  baseIndexYear      Int?      @map("base_index_year")
  newIndexValue      Float     @map("new_index_value")
  newIndexQuarter    String    @map("new_index_quarter")
  newIndexYear       Int       @map("new_index_year")
  revisionIndexType  String    @map("revision_index_type")
  status             String    @default("pending") // pending | approved
  calculatedAt       DateTime  @map("calculated_at")
  approvedAt         DateTime? @map("approved_at")

  @@unique([leaseId, newIndexYear, newIndexQuarter])
  @@map("revisions")
  @@index([entityId])
  @@index([leaseId])
}

model AnnualCharges {
  id               String   @id
  entityId         String   @map("entity_id")
  userId           String   @map("user_id")
  fiscalYear       Int      @map("fiscal_year")
  charges          Json     @default("[]")
  totalAmountCents Int      @map("total_amount_cents")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@unique([entityId, fiscalYear])
  @@map("annual_charges")
  @@index([entityId])
}

model ChargeCategory {
  id         String   @id @default(uuid())
  entityId   String   @map("entity_id")
  slug       String
  label      String
  isStandard Boolean  @default(false) @map("is_standard")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  entity             OwnershipEntity    @relation(fields: [entityId], references: [id])
  leaseBillingLines  LeaseBillingLine[]

  @@unique([entityId, slug])
  @@map("charge_categories")
  @@index([entityId])
}

model LeaseBillingLine {
  id               String   @id @default(uuid())
  leaseId          String   @map("lease_id")
  chargeCategoryId String   @map("charge_category_id")
  amountCents      Int      @map("amount_cents")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  lease          Lease          @relation(fields: [leaseId], references: [id])
  chargeCategory ChargeCategory @relation(fields: [chargeCategoryId], references: [id], onDelete: Restrict)

  @@unique([leaseId, chargeCategoryId])
  @@map("lease_billing_lines")
  @@index([leaseId])
  @@index([chargeCategoryId])
}

model BankTransaction {
  id              String   @id @default(uuid())
  bankStatementId String   @map("bank_statement_id")
  entityId        String   @map("entity_id")
  date            DateTime
  amountCents     Int      @map("amount_cents")
  payerName       String   @map("payer_name")
  reference       String
  isDuplicate     Boolean  @default(false) @map("is_duplicate")
  createdAt       DateTime @default(now()) @map("created_at")

  bankStatement BankStatement @relation(fields: [bankStatementId], references: [id])

  @@map("bank_transactions")
  @@index([bankStatementId])
  @@index([entityId])
}

model WaterMeterReadings {
  id               String   @id
  entityId         String   @map("entity_id")
  userId           String   @map("user_id")
  fiscalYear       Int      @map("fiscal_year")
  readings         Json     @default("[]")
  totalConsumption Int      @map("total_consumption")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  @@unique([entityId, fiscalYear])
  @@map("water_meter_readings")
  @@index([entityId])
}

model ChargeRegularization {
  id                String   @id
  entityId          String   @map("entity_id")
  userId            String   @map("user_id")
  fiscalYear        Int      @map("fiscal_year")
  statements        Json     @default("[]")
  totalBalanceCents Int      @map("total_balance_cents")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  @@unique([entityId, fiscalYear])
  @@map("charge_regularizations")
  @@index([entityId])
}
